<li>
  <span class="content"><%= post.content %></span>
  <span class="timestamp">
  	Postado em 
    <% createdTime = post.created_at.in_time_zone('Brasilia') %>
    <%= createdTime.day%>/<%= createdTime.month%>/<%= createdTime.year%>
     <%= createdTime.hour%>:<%= createdTime.min%>:<%= createdTime.sec%>
  </span><br>
  <% if post.photo.present? %>
    <%= post.photo_file_name %>
    <%= link_to "Download", post.photo.url %>
  <% end %>
</li>
