<% provide(:title, "Sign in") %>
<h1>Entrar</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %> 
      <%= f.email_field :email, placeholder: "Escreva seu email" %>

      <%= f.label :password, "Senha" %>
      <%= f.password_field :password, placeholder: "Escreva sua senha"%>
      <br><br>
      <%= f.submit "Entrar", class: "btn btn-lg btn-primary btn-block" %>
    <% end %>
    <br>
    <p class="lead">Novo usu√°rio? <%= link_to "Cadastre-se agora!", signup_path %></p>
  </div>
</div>