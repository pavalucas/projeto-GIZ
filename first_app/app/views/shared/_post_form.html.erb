	<%= render 'shared/error_messages', object: f.object %>
	<div class="field">
		<%= f.text_area :content, placeholder: "Escrever novo post..." %>
	</div>      
	<%= f.label :group_id, "ID do grupo" %>
	<%= f.text_field :group_id %>
	<%= f.file_field :photo %>
	<%= f.label :subject, "MatÃ©ria" %>
	<% subjects = Subject.all.map{ |f| [f.name, f.id] } %>
