<p id="notice"><%= notice %></p>

<div class="row">
  <div class = "col-md-3">
    <aside class="span4">
      <section>
   		<%= render 'shared/user_info' %>
      </section>
    </aside>
	</div>  
  	<div class = "col-md-9">
    	<div class="span8">
			<% if @group.posts.any? %>
		  		<h3>Posts (<%= @post_count %>)</h3>
		  		<ol class="posts">
		    		<%= render @posts %>
		  		</ol>
		  		<%= will_paginate @posts %>
			<% end %>
		</div>
	</div>
</div>