<p id="notice"><%= notice %></p>

<div class="row">
  <aside class="span4">
    <section>
      <%= render 'shared/user_info' %>
    </section>
    <section>
      <%= render 'shared/post_form' %>
    </section>
  </aside>
</div>
<p>
  <strong>Name:</strong>
  <%= @group.name %>
</p>


<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
<%
=begin %>
      <section>
        <%= render 'shared/post_form' %>
      </section>
<%
=end%> 
    </aside>
  </div>
<%end%>


<div class="span8">
    <% if @group.posts.any? %>
      <h3>Posts (<%= @group.posts.count %>)</h3>
      <ol class="posts">
        <%= render @posts %>
      </ol>
      <%= will_paginate @posts %>
    <% end %>
</div>


